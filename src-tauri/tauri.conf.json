{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "golf-cart-infotainment",
  "version": "0.1.0",
  "identifier": "com.chrism.golf-cart-infotainment",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Golf Cart Infotainment",
        "width": 1280,
        "height": 800,
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
